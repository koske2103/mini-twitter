

<% if user_signed_in? %>
    <div class="comments">
      <% for comment in @comments %>
     
      

      <hr>
   
        <div class="comments">
          <%= comment.description %>
         <br><span>by: <%= comment.user.email %>
           <li class="round-image-50"> <%= image_tag(current_user.avatar.url(:thumb)) %></li>
          <br><%= time_ago_in_words("comment.created_at_date") %>
          
</span>
          <hr>
        </div>

      <% end %>
    </div>

    
<% end %>




      
